let mapleader=" "

" list the buffers and be ready to switch
nnoremap <leader>b :ls<CR>:b<Space>

" quick navigation between splits
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l

" quick quit
nnoremap Q :qa<cr>

" quick nohighlight
nnoremap <silent> <leader>/ :nohl<CR>

